//dias da semana em for
#include <stdio.h>
int main(){
    int Dia;
    
    printf("Digite um n√∫mero de 1 a 7: ");
    scanf("%d", &Dia);
    
    switch(Dia){
        
    case 1:
    printf("Domingo");
    
    break;
    
    case 2:
    printf("Segunda");
    
    break;
    
    case 4:
    printf("Quarta");
    
    break;
    
    case 5:
    printf("Quinta");
    
    break;
    
    case 6:
    printf("Sexta");
    
    break;
    
    case 7:
    printf("Sabado");
    
    break;
}   

return 0;
}
